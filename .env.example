# 刷刷题项目环境变量配置模板
# 复制此文件为 .env 并修改相应的配置值

# ===========================================
# 数据库配置 (MySQL)
# ===========================================
DB_HOST=mysql
DB_PORT=3306
DB_USER=shuashuati
DB_PASSWORD=shuashuati123
DB_NAME=shuashuati
DB_CHARSET=utf8mb4

# ===========================================
# JWT 认证配置
# ===========================================
JWT_SECRET=shuashuati_jwt_secret_key_2024_change_in_production
JWT_EXPIRE_HOURS=24

# ===========================================
# 服务器配置
# ===========================================
SERVER_PORT=8080
SERVER_MODE=release
GIN_MODE=release

# ===========================================
# CORS 跨域配置
# ===========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://localhost:3001

# ===========================================
# 应用配置
# ===========================================
APP_NAME=刷刷题
APP_VERSION=1.0.0
APP_ENV=production

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/shuashuati.log

# ===========================================
# 文件上传配置
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ===========================================
# 邮件配置 (可选)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@shuashuati.com

# ===========================================
# Redis 配置 (可选，用于缓存)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# 安全配置
# ===========================================
# 生产环境请修改以下密钥
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_key_here

# ===========================================
# 第三方服务配置 (可选)
# ===========================================
# 微信小程序配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 阿里云OSS配置 (可选)
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
ALIYUN_OSS_BUCKET=your_oss_bucket_name
ALIYUN_OSS_ENDPOINT=your_oss_endpoint

# ===========================================
# 开发环境配置
# ===========================================
# 仅在开发环境使用
DEBUG=false
DEV_MODE=false
API_MOCK=false